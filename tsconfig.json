{
    "compilerOptions": {
        "target": "es6",
        "module": "es2020",
        "lib": ["es2020", "DOM", "DOM.Iterable"],
        "moduleResolution": "node",
        "baseUrl": "./",
        "strict": true,
        // "skipLibCheck": true
        "allowJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true
    },
    "include": ["resources/ts/"]  // Frontend paths pattern
}

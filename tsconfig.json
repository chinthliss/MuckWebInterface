{
    "compilerOptions": {
        "target": "es6",
        "module": "ES2020",
        "lib": ["ES2022", "DOM", "DOM.Iterable"],
        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "strict": true,
        // "skipLibCheck": true
        "allowJs": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmit": true,
        // Required in Vue projects
        "jsx": "preserve",
        "jsxImportSource": "vue"
    },
    "include": ["resources/ts/"]  // Frontend paths pattern
}
